{
  "name": "javascript-font-manager",
  "version": "1.0.0",
  "description": "A simple JavaScript Font Manager using Electron.",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --prune=true --out=release-builds",
    "package:win": "electron-packager . --overwrite --asar --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Your Product Name\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnttiPerala/JavaScript-Font-Manager.git"
  },
  "keywords": [
    "font-manager",
    "electron",
    "express",
    "javascript"
  ],
  "author": "Antti Perala",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AnttiPerala/JavaScript-Font-Manager/issues"
  },
  "homepage": "https://github.com/AnttiPerala/JavaScript-Font-Manager#readme",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-packager": "^17.1.2"
  }
}
